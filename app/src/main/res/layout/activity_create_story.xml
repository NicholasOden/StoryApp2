<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateStoryActivity">

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="24dp"
        android:outlineProvider="background"
        android:padding="8dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@id/editTextPostStory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnSelectFromGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select from Gallery"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPreview"
        app:layout_constraintStart_toStartOf="@+id/imageViewPreview"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPreview" />


    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Location"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPreview"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="@+id/imageViewPreview"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectFromGallery" />

    <EditText
        android:id="@+id/editTextPostStory"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:gravity="start"
        android:hint="@string/description"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch1" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="#FF5722"
        android:text="Post"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPostStory" />


</androidx.constraintlayout.widget.ConstraintLayout>
